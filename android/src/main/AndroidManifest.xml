<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jieshenghow.cast_plus_plugin">

    <!-- If you need Internet and network state for casting -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES"/>


    <application>
        <!-- This meta-data tells the Cast SDK which CastOptionsProvider class to use -->
        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.jieshenghow.cast_plus_plugin.CastOptionsProvider"/>
    </application>
</manifest>